<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="contact_form_view">
            <field name="name">partner.instructor.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <group name="purchase" position="after">
                    <group string="OpenAcademy" name="openacademy">
                        <field name="instructor"/>
                    </group>
                </group>
                <page name="sales_purchases" position="after">
                    <page string="Attended Sessions" name="openacademy">
                        <field name="session_ids"/>
                    </page>
                </page>
            </field>
        </record>

        <record model="ir.ui.view" id="contact_search_view">
            <field name="name">partner.instructor.search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <filter name="supplier" position="after">
                    <filter string="Instructors" name="instructor" domain="[('instructor', '=', 1)]"/>
                </filter>
            </field>
        </record>

        <record model="ir.actions.act_window" id="contact_list_action">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="configuration_menu" name="Configuration"
                  parent="menu_root" />

        <menuitem id="contact_menu" name="Contacts"
                  parent="configuration_menu"
                  action="contact_list_action" />

    </data>
</odoo>
