<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record model="ir.ui.view" id="course_view_list">
      <field name="name">openacademy.course.tree</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="responsible_id" />
          <field name="level" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="course_view_form">
      <field name="name">openacademy form</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <group>
                  <field name="name"/>
                  <field name="responsible_id" />
                  <field name="level" />
              </group>
              <notebook>
                  <page string="Description" name="desc" >
                      <field name="description"/>
                  </page>
                  <page string="Sessions" name="sessions" >
                      <field name="session_ids" />
                  </page>
              </notebook>
          </sheet>
         </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_course">
      <field name="name">openacademy course</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="openacademy" id="menu_root"/>
    <!-- menu categories -->
    <menuitem name="Courses" id="menu_course_top" parent="menu_root"/>
    <!-- actions -->
    <menuitem name="Courses" id="menu_course" parent="menu_course_top"
              action="action_course"/>
  </data>
</openerp>